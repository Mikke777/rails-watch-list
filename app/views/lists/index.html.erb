<div class="container-lists">
  <h1>All my lists</h1>
  <div class="grid-lists">
    <% @lists.each do |list| %>
      <div class="card-lists" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(list.photos.key) %>)">
        <%= link_to list.name, list_path(list), class:"a-lists" %>
      </div>
    <% end %>
  </div>
  <%= link_to 'Create a new List', new_list_path, class: "button-lists" %>
</div>
