<div class="container-show-list">
  <h1><%= @list.name %></h1>
  <p>Here you can list all the movies you want to see, in order to add one you have to add a "Bookmark"</p>
    <div class="grid">
    <% @bookmarks.each do |bookmark| %>
      <div class="card-movie-bookmark" >
        <div class="container-poster">
          <%= image_tag bookmark.movie.poster_url, class:"img_movie" %>
        </div>
        <div class="card-movie-bookmark-info">
          <div class="container-info-bookmark">
              <p><%= bookmark.movie.title %></p>
              <p>Your comment: <%= bookmark.comment %></p>
            <div class="container-button-delete">
              <%= link_to 'Ã—', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "delete-bookmark" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  <%= link_to 'Add a new Bookmark', new_list_bookmark_path(@list), class: "button-show-list" %>
  <%= link_to "all the lists", lists_path, class: "button-show-list" %>
  <%= link_to 'Edit this list', edit_list_path(@list), class: "button-show-list" %>
</div>
