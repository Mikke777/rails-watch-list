<div class="container">
  <h1>Create a new Bookmark for the list: <%= @list.name %></h1>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie, collection: Movie.order(:title), prompt: "Choose a movie" %>
    <%= f.submit "Submit new Bookmark", class: "btn btn-primary w-100 mb-5" %>
  <% end %>
  <%= link_to 'Back to the List', list_path(@list), class: "d-block btn btn-primary mb-2" %>
  <%= link_to ' Back all the lists', root_path, class: "d-block btn btn-primary mb-2" %>
</div>
